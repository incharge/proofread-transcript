{
  "name": "proofread-transcript",
  "version": "0.0.2-alpha.1",
  "description": "A UI component for proofreading and editing transcripts",
  "main": "./dist/proofread-transcript.umd.js",
  "module": "./dist/proofread-transcript.es.js",
  "unpkg": "./dist/proofread-transcript.es.js",
  "types": "./dist/proofread-transcript.d.ts",
  "exports": {
    ".": {
      "import": "./dist/proofread-transcript.es.js",
      "require": "./dist/proofread-transcript.umd.js"
    }
  },
  "dev": "vite --port 4000",
  "scripts": {
    "clean": "rm -rf dist es demo",
    "dev": "vite --host 0.0.0.0 --port 8888",
    "vite-build": "vite build --config vite.demo.config.js",
    "build": "vite build --config vite.demo.config.js && vite build && tsc lib/proofread-transcript.ts --declaration --emitDeclarationOnly --outFile dist/proofread-transcript.d.ts",
    "preview": "vite preview",
    "test": "vitest"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/incharge/proofread-transcript"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vite-plugin-banner": "^0.7.1",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "proofread",
    "transcript",
    "editor"
  ],
  "author": "Julian Price, inCharge Ltd",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/incharge/proofread-transcript/issues"
  },
  "homepage": "https://github.com/incharge/proofread-transcript#readme"
}
